:css
  @keyframes spinner {
    to {transform: rotate(360deg);}
  }
   
  @-webkit-keyframes spinner {
      to {-webkit-transform: rotate(360deg);}
  }
   
  .spinner {
      min-width: 24px;
      min-height: 24px;
  }
   
  #demo1:before {
      content: 'Loading…';
      position: absolute;
      top: 10%;
      left: 50%;
      width: 16px;
      height: 16px;
      margin-top: -10px;
      margin-left: -10px;
  }
   
  #demo1:not(:required):before {
      content: '';
      border-radius: 50%;
      border: 2px solid rgba(0, 0, 0, .3);
      border-top-color: rgba(0, 0, 0, .6);
      animation: spinner .6s linear infinite;
      -webkit-animation: spinner .6s linear infinite;
  }

  #demo2:before {
      content: 'Loading…';
      position: absolute;
      top: 20%;
      left: 50%;
      width: 26px;
      height: 26px;
      margin-top: -10px;
      margin-left: -10px;
  }

  #demo2:not(:required):before {
      content: '';
      border-radius: 50%;
      border: 2px solid transparent;
      border-top-color: #03ade0;
      border-bottom-color: #03ade0;
      animation: spinner .8s ease infinite;
      -webkit-animation: spinner .8s ease infinite;
  }

  #demo3:before {
      content: 'Loading…';
      position: absolute;
      top: 30%;
      left: 50%;
      width: 16px;
      height: 16px;
      margin-top: -10px;
      margin-left: -10px;
  }
   
  #demo3:not(:required):before {
      content: '';
      border-radius: 50%;
      border-top: 2px solid #03ade0;
      border-right: 2px solid transparent;
      animation: spinner .6s linear infinite;
      -webkit-animation: spinner .6s linear infinite;
  }

  #demo4:before {
      content: 'Loading…';
      position: absolute;
      top: 40%;
      left: 50%;
      width: 16px;
      height: 16px;
      margin-top: -10px;
      margin-left: -10px;
  }
   
  #demo4:not(:required):before {
      content: '';
      border-radius: 50%;
      border: 1px solid #f6f;
      border-top-color: #0e0;
      border-right-color: #0dd;
      border-bottom-color: #f90;
      animation: spinner .6s linear infinite;
      -webkit-animation: spinner .6s linear infinite;
  }

